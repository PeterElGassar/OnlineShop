@model IEnumerable<OnlineShop.Core.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

@foreach (var product in Model)
{
    <div class="col-md-3 product-card">

        <center class="col-md-12">
            <img class="card-img-top" src="~/Images/Uploads/Products/@product.Id/Thumbs/@product.Image" alt="Card image cap">
        </center>
        <div class="col-md-12">
            <strong class="text-success"><a href="/Home/Details/@product.Id">@product.Name</a></strong>
        </div>
        <div class="col-md-12">
            <p>@product.Description</p>
        </div>
        <div class="col-md-12">
            <h4>@product.Price</h4>
        </div>
        <div class="col-md-12">
            <a href="#" class="btn btn-default">add to cart</a>
        </div>

    </div>
}
