@model IEnumerable<OnlineShop.Core.ViewModels.BasketItemVM>

@{
    ViewBag.Title = "Basket";
}

<h2>Basket</h2>


<table class="table">
    <tr>
        <th>
            Product Image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>      
         <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Total
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img width="150" height="150" class="img-responsive" src="~/Images/Uploads/Products/@item.BasketItemId/Thumbs/@item.Image" alt="Alternate Text" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
       
        <td>
           @String.Format("{0:c}",item.Price)
        </td>
        <td>
            @String.Format("{0:c}", item.Price * item.Quantity)
        </td>
        <td>
            <a class="btn btn-danger" href="@Url.Action("RemoveFromBasket","Basket",new {productId= item.BasketItemId })">
                <i class="glyphicon glyphicon-trash"></i>
            </a>
        </td>
    </tr>
}
    <tr>
        <th colspan="4" style="text-align:right"><strong>Basket Total</strong></th>
        <td> @String.Format("{0:c}",(from b in Model select b.Price * b.Quantity).Sum())</td>

    </tr>
</table>
